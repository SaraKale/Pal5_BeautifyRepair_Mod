<Window x:Class="Pal5Mod_BeautifyRepair.UI.AboutMe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pal5Mod_BeautifyRepair.UI"
        xmlns:lex="http://wpflocalizeextension.codeplex.com" 
        xmlns:Loc="clr-namespace:WPFLocalizeExtension.Extensions;assembly=WPFLocalizeExtension"
        lex:ResxLocalizationProvider.DefaultAssembly="Pal5Mod_BeautifyRepair"
        lex:ResxLocalizationProvider.DefaultDictionary="Resources.Resources"
        lex:LocalizeDictionary.DesignCulture="zh-CN"
        mc:Ignorable="d"
        
        Title="{lex:Loc AboutWindow_Title}" Height="400" Width="500" ResizeMode="NoResize">
    
    <!-- ResizeMode="NoResize" 隐藏最小化和最大化按钮，显示关闭按钮（同时能固定窗口尺寸）
            ResizeMode="CanMinimize" 禁用最大化按钮 -->
    <Grid>
        <Image Source="Pal5ico.png" Margin="64,19,297,250" />
        <!-- 标题 -->
        <TextBlock HorizontalAlignment="Left" Margin="167,30,0,0" TextWrapping="Wrap" Text="{lex:Loc AboutWindow_TextBlockTitle}" 
                   VerticalAlignment="Top" Height="35" Width="270" FontSize="20" FontWeight="Bold" TextAlignment="Center"/>
        <TextBlock HorizontalAlignment="Left" Margin="225,64,0,0" TextWrapping="Wrap" Text="version: Beta v0.0.1" 
                   VerticalAlignment="Top" Height="38" Width="170" FontSize="16" TextAlignment="Center"/>
        <TextBlock HorizontalAlignment="Left" Margin="234,91,0,0" TextWrapping="Wrap" Text="by: SaraKale" 
            VerticalAlignment="Top" Height="38" Width="136" FontSize="14" TextAlignment="Center"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,173,0,0" TextWrapping="Wrap" 
                   VerticalAlignment="Top" Height="78" Width="424" FontSize="15" TextAlignment="Justify" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto">
           <!-- 本MOD是用于增强《仙剑奇侠传五》游戏体验，做了身材比例调整、字体修改、UI分辨率扩展、战斗UI界面隐藏等实用功能，以便于想要重温的玩家给予更好的体验，希望能给你带来帮助~  -->
            <Run Text="{lex:Loc AboutWindow_description}"/><LineBreak/>
        </TextBlock>
        <!-- 
         绘制直线
         X1 Y1 定义起点和终点
         Stroke 颜色
         StrokeThickness 线的粗细
        -->
        <Line X1="10" Y1="10" X2="450" Y2="10" Stroke="Black" StrokeThickness="0.5" Margin="21,140,21,203"/>
        <Line X1="10" Y1="10" X2="450" Y2="10" Stroke="Black" StrokeThickness="0.5" Margin="21,244,21,98"/>

        <!-- 开发语言：.Net WPF  -->
        <TextBlock HorizontalAlignment="Left" Margin="38,277,0,0" TextWrapping="Wrap" Text="{lex:Loc AboutWindow_Programlanguage}" VerticalAlignment="Top" Height="24" Width="153" FontSize="15"/>
        <!-- 项目仓库：  -->
        <TextBlock HorizontalAlignment="Left" Margin="220,276,0,0" TextWrapping="Wrap" Text="{lex:Loc AboutWindow_SourceCode}" VerticalAlignment="Top" Height="27" Width="83" FontSize="15"/>
        <!-- github -->
        <Label FontSize="15" HorizontalAlignment="Left" Margin="302,276,0,54" Width="78" Padding="0">
            <Hyperlink Name="aboutgithub" NavigateUri="https://github.com/sarakale/Pal5_BeautifyRepair_Mod" Click="aboutgithub_Click"
             Foreground="#FF4D8CE0" MouseMove="aboutgithub_MouseMove" MouseLeave="aboutgithub_MouseLeave">Github
            </Hyperlink>
        </Label>
        <!-- gitee -->
        <Label FontSize="15" HorizontalAlignment="Left" Margin="303,299,0,35" Width="53" Padding="0">
            <Hyperlink Name="aboutgitee" NavigateUri="https://gitee.com/sarakale/Pal5_BeautifyRepair_Mod" Click="aboutgitee_Click"
             Foreground="#FF4D8CE0" MouseMove="aboutgitee_MouseMove" MouseLeave="aboutgitee_MouseLeave">Gitee
            </Hyperlink>
        </Label>

    </Grid>
</Window>
