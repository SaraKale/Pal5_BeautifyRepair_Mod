<Window x:Class="FontlistBox.Pal5Mod.UI.Fontlistbox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        xmlns:lex="http://wpflocalizeextension.codeplex.com" 
        xmlns:Loc="clr-namespace:WPFLocalizeExtension.Extensions;assembly=WPFLocalizeExtension"
        lex:ResxLocalizationProvider.DefaultAssembly="Pal5Mod_BeautifyRepair"
        lex:ResxLocalizationProvider.DefaultDictionary="Resources.Resources"
        Title="{lex:Loc Customfontlist_WindowTitle}" Height="544" Width="500" ResizeMode="CanResizeWithGrip">

    <Grid  Background="#f7f9f9">

        <!-- 字体列表和预览-->
        <ListBox Name="fontListBox" Margin="34,27,175,124" FontSize="17" SelectionChanged="FontListBox_SelectionChanged" Background="White"  BorderThickness="2" BorderBrush="#FFCCC5C5"/>

        <!--提示和按钮-->
        <!-- 父容器中的水平和垂直位置的属性
        HorizontalAlignment 水平位置。可以使用：Left（靠左）、Right（靠右）、Center（居中）、Stretch（填充父容器的剩余空间）等。
        VerticalAlignment 垂直位置。可以使用值：Top（靠上）、Bottom（靠下）、Center（居中）、Stretch（填充父容器的剩余空间）等。
        -->
        <!-- 请在左侧列表中选择你喜欢的字体 -->
        <TextBlock Margin="0,105,18,0" TextWrapping="Wrap" HorizontalAlignment="Right" VerticalAlignment="Top"
                   Height="60" Width="137" FontSize="16">
                   <Run Text="{lex:Loc Customfontlist_description}"/><LineBreak/></TextBlock>
        <!-- 确定按钮 -->
        <Button x:Name="copyfontButton"  Content="{lex:Loc Button_OK}"  FontSize="17"  Margin="0,188,52,0" 
                  Height="36" Width="93" Click="CopyFontButton_Click" HorizontalAlignment="Right" VerticalAlignment="Top"
                  BorderBrush="{x:Null}" Background="#FF5285D0"  Foreground="White" 
                    IsEnabled="{Binding DataContext.ControlsEnabled, 
                    RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                    Style="{StaticResource MaterialDesignFlatLightBgButton}"/>
        <!-- 取消按钮 -->
        <Button x:Name="fontclouse"  Content="{lex:Loc Button_Cancel}"  FontSize="17" Margin="0,241,52,0" 
                  Height="36" Width="93" Click="Fontclouse_Click" BorderBrush="{x:Null}" Background="#FF98A1AD" 
                  HorizontalAlignment="Right" VerticalAlignment="Top" Foreground="White" 
                    IsEnabled="{Binding DataContext.ControlsEnabled, 
                    RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                    Style="{StaticResource MaterialDesignFlatLightBgButton}"/>

        <!--字体路径
        <TextBox x:Name="FontPath" HorizontalAlignment="Center" Margin="0,475,0,0" Text="字体路径" VerticalAlignment="Top" Width="312" TextChanged="FontPath_TextChanged"/>
        -->

        <!--字体预览-->
        <TextBlock x:Name="DisplayFontCh" Text="字体预览" FontSize="30" HorizontalAlignment="Left" VerticalAlignment="Bottom"  TextWrapping="Wrap" Margin="194,0,0,61"/>
        <TextBlock x:Name="DisplayFontEn" Text="FontDisplay" FontSize="20" Margin="198,0,0,31" HorizontalAlignment="Left" VerticalAlignment="Bottom"  TextWrapping="Wrap"/>

    </Grid>
</Window>
